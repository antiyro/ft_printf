#include "libft/libft.h"
#include "../include/printf.h"


if (format[*i] == '%')
            ft_putchar('%', check_val);
        else if (format[*i] == 'd')
            ft_putnbr(va_arg(arg, int), check_val);
        else if (format[*i] == 'c')
            ft_putchar(va_arg(arg, int), check_val);
        else if (format[*i] == 's')
            ft_putstr(va_arg(arg, char *), check_val);
        else if (format[*i] == 'u')
            ft_convert_min(va_arg(arg, unsigned long long), 10, check_val);
        else if (format[*i] == 'x')
            ft_convert_min(va_arg(arg, unsigned long long), 16, check_val);
        else if (format[*i] == 'X')
            ft_convert_maj(va_arg(arg, unsigned long long), 16, check_val);
        else if (format[*i] == 'i')
            ft_putnbr(va_arg(arg, int), check_val);
        else if (format[*i] == 'p')
        {
            ft_putstr("0x", check_val);
            ft_convert_min(va_arg(arg, unsigned long long), 16, check_val);
        }

